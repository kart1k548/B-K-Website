<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/login.css" type="text/css">
</head>
<body>
<div class="A"></div>
<%- include('../includes/navbar.ejs') %>
<br>
        
<div class="login-form text-center">
    <form action="#" method="post">
        <h2>Login Form</h2>
        
        <div class="form-group">
            <input type="email" class="form-control input-lg" name="Email" placeholder="Email Id" required="required">
        </div>
        <div class="form-group">
            <input type="password" class="form-control input-lg" name="Password" placeholder="password" required="required">
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-success signup-btn">Login</button>
        </div>
        </form>
         <div class="text-center">Don't have an account? <a href="./signup.html">SignUp here</a></div>

    </div>
    </div>

    <button onclick="topFunction()" id="myBtn" title="Go to top"><span class="fa fa-angle-up  " aria-hidden="true"></span></button>

<br>
<br>
<br>
<br><br>
<%- include('../includes/footer.ejs') %>

<script>
    //Get the button
    var mybutton = document.getElementById("myBtn");
    
    // When the user scrolls down 20px from the top of the document, show the button
    window.onscroll = function() {scrollFunction()};
    
    function scrollFunction() {
      if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
        mybutton.style.display = "block";
      } else {
        mybutton.style.display = "none";
      }
    }
    
    // When the user clicks on the button, scroll to the top of the document
    function topFunction() {
      document.body.scrollTop = 0;
      document.documentElement.scrollTop = 0;
    }
    </script>
    
</body>
</html>